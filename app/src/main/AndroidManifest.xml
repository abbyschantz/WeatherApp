    package="aschantz.weatherapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.orm.SugarApp">

        <meta-data android:name="DATABASE" android:value="citydb.db" />
        <meta-data android:name="VERSION" android:value="11" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="aschantz.weatherapp.data"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WeatherDetails">

        </activity>
        <activity android:name=".AddCityActivity">

        </activity>
        <activity
            android:name=".CitiesList"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>